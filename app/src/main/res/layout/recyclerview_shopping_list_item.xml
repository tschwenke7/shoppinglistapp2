<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:visibility="visible"
    android:gravity="center_vertical"
    >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            tools:text="50g ingredient"
            tools:visibility="visible"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:background="@color/recipe_item_background_light"/>

        <ImageButton
            android:id="@+id/item_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/clickable_item_background_light"
            android:contentDescription="@string/content_description_ingredient_options"
            android:minWidth="48dp"
            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

        <EditText
            android:id="@+id/edit_text_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/edit_ing_list_item_hint"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textAutoCorrect"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            tools:text="50g ingredient dfsghbdfggdrs dfgbhj dfgyhukbdgrf bhukd rfgbuykgers hbuk ueygrbkdgs bfrhukgdrs hbukdgrs hubkergy ubdgr suybh dfg"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/confirm_edit_item_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/clickable_item_background_light"
            android:contentDescription="@string/content_description_save_ingredient_button"
            android:minWidth="48dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_tick"
            tools:visibility="gone" />
</LinearLayout>

