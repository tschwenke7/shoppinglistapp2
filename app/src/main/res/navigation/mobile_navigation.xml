<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/recipe_list">

    <fragment
        android:id="@+id/recipe_list"
        android:name="com.example.shoppinglistapp2.activities.ui.recipes.recipelist.RecipeListFragment"
        android:label="@string/title_recipes"
        tools:layout="@layout/fragment_recipe_list" >
        <action
            android:id="@+id/action_recipe_list_to_view_recipe"
            app:destination="@id/viewRecipeFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_recipe_list_to_create_recipe"
            app:destination="@id/createRecipe" />
    </fragment>

    <fragment
        android:id="@+id/navigation_shopping_list"
        android:name="com.example.shoppinglistapp2.activities.ui.shoppinglist.ShoppingListFragment"
        android:label="@string/title_shopping_list"
        tools:layout="@layout/fragment_shopping_list" />
    <fragment
        android:id="@+id/recipeEditorFragment"
        android:name="com.example.shoppinglistapp2.activities.ui.recipes.editor.RecipeEditorFragment"
        android:label="@string/title_recipe_editor"
        tools:layout="@layout/fragment_recipe_editor">
        <action
            android:id="@+id/action_save_or_cancel_and_return_to_recipe_list"
            app:destination="@id/recipe_list"
            app:popUpTo="@id/recipe_list"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_recipe_editor_to_view_recipe"
            app:destination="@id/viewRecipeFragment"
            app:popUpTo="@id/recipeEditorFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="recipeId"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="newRecipeFlag"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/viewRecipeFragment"
        android:name="com.example.shoppinglistapp2.activities.ui.recipes.viewrecipe.ViewRecipeFragment"
        android:label="View Recipe"
        tools:layout="@layout/fragment_view_recipe">
        <action
            android:id="@+id/action_view_recipe_to_recipe_list"
            app:destination="@id/recipe_list" />
        <action
            android:id="@+id/action_view_recipe_to_recipe_editor"
            app:destination="@id/recipeEditorFragment">
            <argument
                android:name="newRecipeFlag"
                android:defaultValue="false" />
        </action>
        <argument android:name="recipeId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/createRecipe"
        android:name="com.example.shoppinglistapp2.activities.ui.recipes.creator.CreateRecipeFragment"
        android:label="@string/create_recipe_title" >
        <action
            android:id="@+id/action_createRecipe_to_recipeEditorFragment"
            app:destination="@id/recipeEditorFragment"
            app:popUpTo="@id/createRecipe"
            app:popUpToInclusive="true">
            <argument
                android:name="newRecipeFlag"
                android:defaultValue="true" />
        </action>
    </fragment>

</navigation>