<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_recipes">

    <fragment
        android:id="@+id/navigation_recipes"
        android:name="com.example.shoppinglistapp2.activities.ui.recipes.RecipesFragment"
        android:label="@string/title_recipes"
        tools:layout="@layout/fragment_recipe_list" >
        <action
            android:id="@+id/action_add_new_recipe"
            app:destination="@id/newRecipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_shopping_list"
        android:name="com.example.shoppinglistapp2.activities.ui.shoppinglist.ShoppingListFragment"
        android:label="@string/title_shopping_list"
        tools:layout="@layout/fragment_shopping_list" />
    <fragment
        android:id="@+id/newRecipeFragment"
        android:name="com.example.shoppinglistapp2.activities.ui.newrecipe.NewRecipeFragment"
        android:label="NewRecipeFragment" >
        <action
            android:id="@+id/action_save_or_cancel_and_return_to_recipe_list"
            app:destination="@id/navigation_recipes" />
    </fragment>

</navigation>